<p id="notice"><%= notice %></p>

<h1>Listing Pairs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Pair name</th>
      <th>Photos</th>
      <th>Pair time</th>
      <th>Status</th>
      <th>Story</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @pairs.each do |pair| %>
      <tr>
        <td><%= pair.pair_name %></td>
        <td>
          <%= image_tag pair.grad1.photo.thumb, class: 'pull-left img-circle' %>
          <%= image_tag pair.grad2.photo.thumb, class: 'pull-left img-circle' %></td>
        <td><%= pair.pair_time %></td>
        <td><%= pair.status %></td>
        <td><%= pair.story %></td>
        <td><%= link_to 'Show', pair, class: 'btn btn-default' %></td>
        <td>
          <% if pair.on_beach? %>
          <%= link_to 'Kick Off', kick_off_pair_path(pair), class: 'btn btn-primary' %>
          <% elsif pair.working? %>
          <%= link_to 'Dest Check', desk_check_pair_path(pair), class: 'btn btn-success' %>
          <% else %>
          <button class="btn btn-default" disabled>Waiting</button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @pairs %>
