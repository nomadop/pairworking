<p id="notice"><%= notice %></p>

<h1>Listing Grads</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grads.each do |grad| %>
      <tr>
        <td><%= grad.name %></td>
        <td><%= grad.role %></td>
        <td><%= image_tag grad.photo.thumb %></td>
        <td><%= link_to 'Show', grad %></td>
        <td><%= link_to 'Edit', edit_grad_path(grad) %></td>
        <td><%= link_to 'Destroy', grad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

